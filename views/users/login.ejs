    <div class="col-5 container my-2  formBox">
        <h2 class="text-center heading">Login</h2>
        <hr>
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="form-group mb-3">
                <label for="username" class="formText">Name</label>
                <input type="text" name="username" id="username" class="form-control form-control-sm" required>
                <div class="invalid-feedback">
                    Please provide a valid name.
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="location" class="formText">Password</label>
                <input type="password" name="password" id="password" class="form-control form-control-sm" required>
                <div class="invalid-feedback">
                    Please provide a valid password.
                </div>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-sm btn-success">Login</button>
                <a href="/campgrounds" class="btn btn-sm btn-danger">cancel</a>
            </div>
        </form>
        <input type="button" class="btn btn-sm" value="forgot password">
    </div>
    <script src="../public/js/clientvalidation.js"></script>