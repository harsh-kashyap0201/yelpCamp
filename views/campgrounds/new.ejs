<% layout('layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/../public/style/new.css">
    <script>
        document.title = "YelpCamp | New CampgroundðŸ†•";
    </script>
    <div class="col-5 container my-2 formBox ">
        <h2 class="text-center heading">NEW CAMPGROUND</h2>
        <hr>
        <form action="/campgrounds/new" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="name" class="formText">Name</label>
                <input type="text" name="name" id="name" class="form-control form-control-sm" required>
                <div class="invalid-feedback">
                    Please provide a valid name.
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="location" class="formText">Location</label>
                <input type="text" name="location" id="location" class="form-control form-control-sm" required>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="description" class="formText">Description</label>
                <textarea name="description" id="description" class="form-control form-control-sm" rows="5"
                    style="resize: none;" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid description.
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="image" class="form-label">Add images</label>
                <input class="form-control form-control-sm" type="file" id="image" name="image" multiple>
            </div>
            <div class="form-group mb-3">
                <label for="price" class="formText" >Price</label>
                <div class="input-group form-group mb-3">
                    <div class="input-group-text formText currency">$</div>
                    <input type="number" class="form-control form-control-sm" id="price" name="price" placeholder="00.00" required>
                    <div class="invalid-feedback">
                        Please provide a valid Price.
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-sm btn-success">Add Campground</button>
                <a href="/campgrounds" class="btn btn-sm btn-danger">cancel</a>

            </div>
        </form>
    </div>
    <script src="../public/js/clientvalidation.js"></script>