<% layout('layouts/boilerplate.ejs') %>
<script>
    document.title = "YelpCamp | <%- campground.name %>üèïÔ∏è";
</script>
<link rel="stylesheet" href="../public/style/show.css">
<link rel="stylesheet" href="../public/style/star.css">
<div class=" d-flex justify-content-center">
    <div class="mx-3 my-5 col-5 ">
        <div class="card">
            <img src="<%= campground.image %> " class="card-img-top" style="width: 100%; height:50vh;" alt="<%= campground.name %>">
            <div class="card-body">
                <h5 class="card-title"><%= campground.name %></h5>
                <h6 class="card-title"><%= campground.location %></h6>
                <p class="card-text"><%= campground.description %>.</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Price: <%= campground.price %></li>
                <li class="list-group-item">
                    
                </li>
            </ul>
            <% if(currentUser && currentUser.equals(campground.author._id)) {%> 
                <div class="card-body">
                    <a href="/campgrounds/<%= campground.id  %>/edit" class="btn btn-sm btn-primary">Edit</a>
                    <form action="/campgrounds/<%=campground.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a href="/campgrounds" class="btn btn-light btn-sm">Back</a>
                </div>
            <% } %>
            <div class="card-footer text-muted">Submitted by 
                <% if(currentUser && currentUser.equals(campground.author._id)) {%> 
                    You <% } else { %> 
                <%=campground.author.username %> <% } %>
                2 Days Ago</div>
        </div>
            
    </div>
    <div class="mx-3 my-5 col-5 ">
        <% if(currentUser){ %>
            <div class="card">
                <div class="card-body">
                    <h2>Leave a Review</h2>
                <form action="/campgrounds/<%= campground.id  %>/reviews" method="post" novalidate class="needs-validation">
                    <fieldset class="starability-heartbeat">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <textarea class="form-control my-2" placeholder="Leave a review here" id="floatingTextarea" name="review" rows="5" style="resize: none;" required></textarea>
                    <div class="invalid-feedback">
                        Please provide a valid review.
                    </div>
                    <button type="submit" class="btn btn-success btn-sm my-3">Submit</button>
                </form>
                </div>
            </div>
            <hr>
        <% } %>
        <div class="review">
            <h2>Reviews</h2>
        <% if(campground.reviews.length > 0) { %>
        <% for(let review of campground.reviews) { %>
        <div class="card my-2">
            <div class="card-body">
                <h4 class="card-title mb-2"><%= review.author.username %> </h4>
                    <p class="starability-result" data-rating=<%= review.rating %>>
                        Rated: 3 <%= review.rating %>
                    </p>
                <p class="card-text"><%= review.review %></p>
                <% if(currentUser && currentUser.equals(review.author._id)) { %> 
                <form action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=DELETE" method="post"><button class="btn btn-danger btn-sm" type="submit">Delete review</button></form>
                <% } %>
            </div>
        </div>
        <% } %>
        <% } else { %>
            <p>No reviews yet</p>
        <% } %>
        </div>
    </div>
</div>
<script src="../public/js/clientvalidation.js"></script>

